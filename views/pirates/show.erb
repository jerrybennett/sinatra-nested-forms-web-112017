<h1>Display your Pirate here</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h3>Weight: <%= @pirate.weight %></h3><br>
  <h3>Height: <%= @pirate.height %></h3>
</div><br>

<!-- <h2>Display your first ship here</h2> -->
<% @ships.each_with_index do |ship, index| %>
  <h2>Display ship #<%= index += 1 %> here</h2>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p><br>
  </div><br>
<% end %>
